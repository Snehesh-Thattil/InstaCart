<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Login</h2>
            <form action="/login" method="post" class="d-flex flex-column gap-3">
                <div class="form-group">
                    <label for="">Email address</label>
                    <input type="email" class="form-control" name="email" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Enter password">
                </div>
                <div class="form-group mt-2 d-flex flex-column justify-content-space-between">
                    <button type="submit" class="btn btn-primary float-right">Login</button>
                    <a href="/signup" class="mt-4">Create new account ?</a>
                </div>
            </form>
        </div>
    </div>
</div>