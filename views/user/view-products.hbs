<section class="view-products">
    <div class="cards">
        {{#each products}}
        <div class="card">
            <div class="details">
                <img src="/images/products/{{this._id}}.jpeg" alt="product-photo">
                <div class="infos">
                    <h4>{{this.name}}</h4>
                    {{!-- <p>{{this.description}}</p> --}}
                    <h3>
                        <span>₹</span>{{this.price}}
                        <strike><span>₹</span>{{this.original_price}}</strike>
                    </h3>
                </div>
            </div>
            <div class="buttons">
                <a href="/add-to-cart"><button class="buttons">Add to cart</button></a>
                <a href="/buy-now"><button class="buttons">Buy Now</button></a>
            </div>
        </div>
        {{/each}}
    </div>
</section>