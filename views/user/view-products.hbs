<section>
    <div class="container-fluid mt-3">
        <div class="row">
            {{#each products}}
            <div class="col-md-3">
                <div class="card me-3 mt-3" style="width: 20rem; height:25rem;">
                    <img src='/images/products/{{this._id}}.jpeg' style="height: 10rem; object-fit:contain;"
                        class="card-img-top" alt="...">
                    <div class="card-body">
                        <h4 class="card-title">{{this.name}}</h4>
                        <p class="card-text">{{this.description}}</p>
                        <h5>{{this.price}}</h5>
                        <a href="#" class="btn btn-primary">Add to Cart</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>